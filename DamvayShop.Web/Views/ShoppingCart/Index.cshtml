
@{
    ViewBag.Title = "Giỏ hàng";
    ViewBag.MetaKeyword = "Giỏ hàng thời trang nữ, mua quần áo nữ online, mua quần áo nữ 24h, shop thời trang nữ online, shop thời trang nữ," +
                " shop thời trang dành cho nữ, shop kinh doanh quần áo nữ online, shop bán quần áo nữ";
    ViewBag.MetaDiscription = "Quý khách xem qua giỏ hàng thời trang của mình. Cảm ơn quý khách đã tin tưởng shop," +
                " Nếu quý khách có nhu cầu mua sắm quần áo nữ mong quý khách ủng hộ shop, Shop chân thành cảm ơn quý khách. Chú quý khách nhiều niềm vui.";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
@section JavaScriptLayout {
    @Scripts.Render("~/js/shoppingcart");
}



<div id="all">

    <div id="content">
        <div class="container">

            <div class="col-md-12">

                <ul class="breadcrumb">
                    <li>
                        <a href="index.html">Home</a>
                    </li>

                    <li>Giỏ hàng</li>

                </ul>

            </div>


            <div class="col-md-12" id="customer-order">
                <div class="box">
                    <h1>Giỏ hàng</h1>
                    <hr>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th colspan="2">Sản phẩm</th>
                                    <th>Size</th>
                                    <th>Số lượng</th>
                                    <th>Giá</th>
                                    <th>Giá khuyến mãi</th>
                                    <th>Tổng tiền</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody id="shopingContent"></tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="7" class="text-right">Tổng tiền:</th>
                                    <th id="totalPriceShopping"></th>
                                </tr>

                            </tfoot>
                        </table>

                    </div>
                    <!-- /.table-responsive -->
                    <div class="box-footer">
                        <div class="pull-left">
                            <a href='javascript:history.go(-2)' class="btn btn-default"><i class="fa fa-chevron-left"></i>Tiếp tục mua</a>
                        </div>
                        <div class="pull-right">
                            <a class="btn btn-primary" id="gotoCheckout"> Thanh toán <i class="fa fa-chevron-right"></i></a>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <!-- /.container -->
    </div>
</div>


<script id="tmpShoppingContent" type="x-tmpl-mustache">
    <tr>
        <td>
            <img src="{{Image}}" alt="{{Name}}">
        </td>
        <td>
            {{Name}}
        </td>
        <td data-id="{{ProductId}}" class="txtSizeShopping">
            {{Size}}
        </td>

        <td><input type="number" data-size="{{Size}}" data-price="{{salePrice}}" data-id="{{ProductId}}" value="{{Quantity}}" class="form-control txtKeyupQuantity" /></td>
        <td>{{PriceF}}</td>
        <td>{{PromotionPrice}}</td>
        <td id="amount_{{ProductId}}_{{Size}}">{{Amount}}</td>
        <td><button data-size="{{Size}}" data-id="{{ProductId}}" class="btn btn-danger btnDeleteItemShoppingCart"><i class="fa fa-trash-o"></i></button></td>
    </tr>
</script>



