@model DamvayShop.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
    ViewBag.MetaKeyword = "Đăng ký, thời trang nữ, thời trang nữ đẹp, đầm váy, áo sơ mi ";
    ViewBag.MetaDiscription = "Đăng ký tài khoản online để mua hàng thời trang nữ, sản phầm đủ chủng loại đầm váy, áo sơ mi ngắn tay, dài tay, quần jean, quần tây..";
    Layout = "~/Views/Shared/Layouts.cshtml";
}


<div id="all">

    <div id="content">
        <div class="container">

            <div class="col-md-12">

                <ul class="breadcrumb">
                    <li>
                        <a href="/index.html">Home</a>
                    </li>
                    <li>Đăng ký</li>
                </ul>

            </div>

            <div class="col-md-6">
                <div class="box">
                    <h1>Đăng ký</h1>

                    <p class="lead">Bạn chưa có tài khoản?</p>
                    <hr>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {

                        @Html.AntiForgeryToken();
                        @Html.ValidationSummary(false, "", new { @class = "error" });
                        if (ViewData["SuccessMgs"] != null)
                        {
                            <div class="alert alert-success">
                                <strong>Bạn đã đăng ký thành công</strong>
                            </div>
                        }
                        <div class="form-group">
                            <label for="name">Tên tài khoản</label>
                            @Html.TextBoxFor(model => model.UserName, new { data_bind = "value:UserName", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            @Html.TextBoxFor(model => model.Email, new { data_bind = "value:Email", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="password">Mật khẩu</label>
                            @Html.PasswordFor(model => model.Password, new { data_bind = "value:Password", @class = "form-control" })
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-user-md"></i> Đăng ký</button>
                        </div>
                    }

                </div>
            </div>
            <div class="col-md-6">
                <div class="box">

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken();
                        if (TempData["ErrorLogin"] != null)
                        {
                            <div class="alert alert-danger">
                                <strong>@TempData["ErrorLogin"].ToString()</strong>
                            </div>
                        }
                        <h1>Đăng nhập</h1>

                        <p class="lead">Bạn đã có tài khoản?</p>
                        <hr>
                        <div class="form-group">
                            <label for="email">Tên tài khoản</label>
                            @Html.TextBoxFor(model => model.UserName, new { data_bind = "value:UserName", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            @Html.PasswordFor(model => model.Password, new { data_bind = "value:Password", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            Lưu mật khẩu:   @Html.CheckBox("RememberMe")
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i>Đăng nhập</button>
                        </div>

                    }
                </div>
            </div>


        </div>
        <!-- /.container -->
    </div>
  </div>
